{
	"manifest_version": 2,
	"name": "Controle de ponto",
	"description": "Aplicativo utilizado para controle de banco de horas.",
	"version": "2.0.2",

	"options_ui": {
		// Required.
		"page": "options.html",
		// Recommended.
		"chrome_style": true
	},
	"browser_action":{
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "res/icon_16.png",
		"24": "res/icon_24.png",
		"128": "res/icon_128.png"
	},
	"permissions": [
		"unlimited_storage",
		"notifications",
		"clipboardRead",
		"clipboardWrite",
		"contextMenus",
		"cookies",
		"storage",
		"idle",
		"webRequest",
		"tabs",
		"activeTab",
		"*://colaborador.convenia.com.br/meu-ponto/fechamento/*"
	],
	"web_accessible_resources": [
		"res/icon_128.png"
	],
	"background": {
		"scripts":[
			"libs/jquery-1.9.0.min.js",
			"js/notification.js",
			"libs/jquery.json-2.3.min.js",
			"libs/jquery.maskedinput-1.3.js",
			"js/extensions.js",
			"js/hrs.helpers.js",
			"js/hrs.dao.js",
			"js/hrs.timestamp.js",
			"js/hrs.ui.month.js",
			"js/hrs.ui.holiday.js",
			"js/hrs.ui.main.js",
			"js/bg/background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://colaborador.convenia.com.br/meu-ponto/fechamento/*"
			],
			"js": [
				"libs/jquery-3.2.1.min.js",
				"libs/jquery.json-2.3.min.js",
				"js/hrs.convenia.js"
			],
			"persistent": false
		}
	]
}
